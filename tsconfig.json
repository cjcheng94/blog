{
  "compilerOptions": {
    "strict": true,
    "module": "esnext",
    "target": "ES2019",
    "lib": ["esnext", "dom", "dom.iterable", "WebWorker"],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "noImplicitReturns": false,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "importHelpers": true,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "baseUrl": "./src",
    "paths": {
      "@components": ["components"],
      "@routes": ["routes"],
      "@utils": ["utils"],
      "@context": ["context"],
      "@graphql": ["gql/graphql.ts"]
    },
    "types": [
      "vite/client",
      "vite-plugin-pwa",
      "vite-plugin-pwa/client",
      "vite-plugin-pwa/info"
    ]
  },
  "include": ["src", "typings"],
  "exclude": [
    "node_modules",
    "build",
    "src/components/RichTextEditor/DEPRECATED"
  ]
}
